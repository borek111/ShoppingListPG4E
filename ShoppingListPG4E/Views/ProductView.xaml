<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShoppingListPG4E.ViewModels"
             x:Class="ShoppingListPG4E.Views.ProductView"
             x:DataType="vm:ProductViewModel">


    <Frame HasShadow="False"
           CornerRadius="6"
           Padding="8"
           BackgroundColor="Transparent"
           Opacity="{Binding Opacity}">
        <VerticalStackLayout Spacing="8">

            <HorizontalStackLayout Spacing="8"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center">

                <Label Text="{Binding Name}" FontSize="16" FontAttributes="Bold" />

                <Label Text="opcjonalne"
                       IsVisible="{Binding Optional}"
                       TextColor="White"
                       BackgroundColor="#FF0000"
                       Padding="4,2"
                       FontAttributes="Bold"/>

                <Label Text="-" />
                <Label Text="{Binding Quantity, StringFormat='{}{0:0}'}" />
                <Label Text="{Binding Unit}" />

                <Label Text="-" />
                <Label Text="{Binding Category}" />
                <Label Text="-" />
                <Label Text="{Binding Store}" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="6"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center">
                
                <Label Text="Kupione:" VerticalTextAlignment="Center" Margin="0,0,4,0" />
                <CheckBox IsChecked="{Binding Purchased, Mode=TwoWay}" />
                <Button Text="UsuÅ„" Command="{Binding DeleteCommand}" WidthRequest="64"/>
                <Button Text="-" Command="{Binding DecreaseCommand}" HorizontalOptions="FillAndExpand" HeightRequest="40"/>
                <Button Text="+" Command="{Binding IncreaseCommand}" HorizontalOptions="FillAndExpand"
                  HeightRequest="40"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </Frame>
</ContentView>