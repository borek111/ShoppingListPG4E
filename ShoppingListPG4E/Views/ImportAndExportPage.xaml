<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ShoppingListPG4E.ViewModels"
    x:Class="ShoppingListPG4E.Views.ImportAndExportPage"
    x:DataType="vm:ImportExportViewModel">

    <ContentPage.Resources>
        <vm:ImportExportViewModel x:Key="ViewModel" />
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <StaticResource Key="ViewModel" />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="24" Spacing="16">
        <Label Text="ZarzÄ…dzanie importem i exportem" FontAttributes="Bold" />
        <Button Text="Exportuj" Command="{Binding ExportCommand}" />
        <Button Text="Importuj" Command="{Binding ImportCommand}" />
        <Label Text="{Binding Status}" TextColor="Gray" LineBreakMode="WordWrap" />
    </VerticalStackLayout>
</ContentPage>